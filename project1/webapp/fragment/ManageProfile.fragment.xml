<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
  <Dialog id="profileDialog" horizontalScrolling="false" verticalScrolling="true" contentWidth="560px" contentHeight="550px" class="profile-dialog-bg"  stretch="true" 	xmlns:w="sap.ui.integration.widgets" xmlns:f="sap.f"  xmlns:layout="sap.ui.layout">
  <customHeader>
    <Bar>
      <contentMiddle>
        <Title text="My Account" />
      </contentMiddle>
      <contentRight>
        <Button type="Transparent" icon="sap-icon://decline" press="onProfileDialogClose"/>
      </contentRight>
    </Bar> 
  </customHeader>
    <VBox>

     <!-- Header Section -->
<HBox class="sapUiLargeMarginTop" width="100%" justifyContent="SpaceBetween" alignItems="Center">

    <!-- LEFT SIDE: Avatar + Profile Details -->
    <HBox width="75%" alignItems="Center">

        <!-- Avatar -->
        <Avatar 
            src="{profileData>/photo}" 
            initials="{profileData>/initials}" 
            displaySize="XL"
            class="sapUiSmallMarginBegin"/>

        <!-- Profile Details -->
        <VBox width="100%" class="sapUiSmallMarginBegin">

            <l:Grid
                defaultSpan="L6 M6 S12"
                width="100%"
                hSpacing="2"
                vSpacing="2">

                <!-- LEFT COLUMN -->
                <VBox>
                    <HBox>
                        <Label text="Name :" />
                        <Text text="{profileData>/name}" class="profile-contact-text" />
                    </HBox>

                    <HBox>
                        <Label text="DOB :" />
                        <Text text="{profileData>/dob}" class="profile-contact-text" />
                    </HBox>

                    <HBox>
                        <Label text="Gender :" />
                        <Text text="{profileData>/gender}" class="profile-contact-text" />
                    </HBox>
                </VBox>

                <!-- RIGHT COLUMN -->
                <VBox>
                    <HBox>
                        <Label text="Mobile :" />
                        <Text text="{profileData>/phone}" class="profile-contact-text" />
                    </HBox>

                    <HBox>
                        <Label text="Email :" />
                        <Text text="{profileData>/email}" class="profile-contact-text" />
                    </HBox>

                    <HBox>
                        <Label text="Address :" />
                        <Text text="{profileData>/address}" class="profile-contact-text" />
                    </HBox>
                </VBox>

            </l:Grid>

        </VBox>

    </HBox>

    <!-- RIGHT SIDE: Logout Button -->
    <VBox width="25%" alignItems="End">
        <Button text="Log Out" press="Onpresslogout" type="Reject" />
    </VBox>

</HBox>

    
        <Text text="Booking History" class="sapUiSmallMarginTop sapUiSmallMarginBegin"/>
  <HBox height="100%" renderType="Bare" width="100%">
  
     <IconTabBar
		id="idIconTabBarFiori2"
		expanded="{device>/isNoPhone}"
		class="sapUiResponsiveContentPadding sapUiSmallMarginTop">
		<items>
			<IconTabFilter
    text="Upcoming"
    key="upcoming">

    <layout:Grid defaultSpan="XL6 L6 M12 S12" vSpacing="1" hSpacing="1"
                 class="sapUiResponsiveMargin sapUiTinyMargin">

        <VBox width="100%" class="sapUiMediumMargin">

            <f:Card class="sapUiTinyMargin">
                <f:header>
                    <Toolbar class="customdashboard">
                        <Title text="Upcoming Booking" level="H5" wrapping="true" class="Dashboardtitle"/>
                        <ToolbarSpacer/>
                    </Toolbar>
                </f:header>

                <f:content>

                    <VBox class="sapUiSmallMargin">

                        <!-- START / END DATE ROW -->
                        <HBox class="sapUiSmallMarginBottom">
                            <VBox width="50%">
                                <Label text="Start Date" />
                                <Text text="{profileData>/upcoming/startDate}" />
                            </VBox>

                            <VBox width="50%" class="sapUiSmallMarginBegin">
                                <Label text="End Date" />
                                <Text text="{profileData>/upcoming/endDate}" />
                            </VBox>
                        </HBox>

                        <!-- AMOUNT ROW -->
                        <HBox>
                            <VBox width="50%">
                                <Label text="Amount" />
                                <Text text="{profileData>/upcoming/amount}" />
                            </VBox>
                        </HBox>

                    </VBox>

                </f:content>

            </f:Card>

        </VBox>

    </layout:Grid>

</IconTabFilter>


			<IconTabFilter
				text="Complete Booking"
				key="completebooking">
			
        <Table items="{profileData>/bookings}" mode="SingleSelectLeft" id="IdProfileaTable">
        <headerToolbar>
            <Toolbar>
                <ToolbarSpacer/>
                <Button 
                    text="Edit"
                    icon="sap-icon://edit"
                    press="onProfileLogout"
                    type="Emphasized"/>
            </Toolbar>
        </headerToolbar>

        <columns>
            <Column><Text text="Booking Date"/></Column>
            <Column><Text text="Room"/></Column>
            <Column><Text text="Amount"/></Column>
            <Column><Text text="Status"/></Column>
        </columns>

        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{path:'profileData>Startdate'}"/>
                    <Text text="{profileData>room}"/>
                    <Text text="{path:'profileData>amount', formatter: '.Formatter.formatCurrency'}"/>
                    <Text text="{profileData>status}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
			</IconTabFilter>
			
		</items>
	</IconTabBar>
   
     
   

    


   
   
  </HBox>


    </VBox>
  </Dialog>
</core:FragmentDefinition>
