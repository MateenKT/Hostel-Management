<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
  <Dialog id="profileDialog" horizontalScrolling="false" verticalScrolling="true" contentWidth="560px" contentHeight="550px" class="profile-dialog-bg" xmlns:f="sap.ui.layout.form" stretch="true">
  <customHeader>
    <Bar>
      <contentMiddle>
        <Title text="My Account" />
      </contentMiddle>
      <contentRight>
        <Button type="Transparent" icon="sap-icon://decline" press="onProfileDialogClose"/>
      </contentRight>
    </Bar> 
  </customHeader>
    <VBox>
      <!-- Header with background -->
      <HBox class="sapUiLargeMarginTop" width="100%">

        <!-- Avatar Section -->
        <VBox justifyContent="Center" alignItems="Center" >
            <Avatar 
                src="{profileData>/photo}" 
                initials="{profileData>/initials}" 
                displaySize="XL"
                class="profile-avatar"/>
        </VBox>

        <!-- Two-column details section -->
        <VBox width="100%" class="sapUiSmallMarginBegin">

            <l:Grid
                defaultSpan="L6 M6 S12"
                width="100%"
                hSpacing="2"
                vSpacing="2">

                <!-- LEFT COLUMN -->
                <VBox>
                    <HBox>
                        <Label text="Name :" />
                        <Text text="{profileData>/name}" class="profile-contact-text" />
                    </HBox>

                    <HBox>
                        <Label text="DOB :" />
                        <Text text="{profileData>/dob}" class="profile-contact-text" />
                    </HBox>

                    <HBox>
                        <Label text="Gender :" />
                        <Text text="{profileData>/gender}" class="profile-contact-text" />
                    </HBox>
                </VBox>

                <!-- RIGHT COLUMN -->
                <VBox>
                    <HBox>
                        <Label text="Mobile :" />
                        <Text text="{profileData>/phone}" class="profile-contact-text" />
                    </HBox>

                    <HBox>
                        <Label text="Email :" />
                        <Text text="{profileData>/email}" class="profile-contact-text" />
                    </HBox>

                    <HBox>
                        <Label text="Address :" />
                        <Text text="{profileData>/address}" class="profile-contact-text" />
                    </HBox>
                </VBox>

            </l:Grid>

        </VBox>

    </HBox>
      <VBox>
  <HBox height="100%">
   
    <Text text="Booking History"/>
     <IconTabBar
		id="idIconTabBarFiori2"
		expanded="{device>/isNoPhone}"
		class="sapUiResponsiveContentPadding">
		<items>
			<IconTabFilter
				text="Upcomming"
				key="upcomming"
				>
				<Text text="Upcomming goes here ..." />
			</IconTabFilter>
			<IconTabFilter
				text="Complete Booking"
				key="completebooking"
				count="43">
				<Text text="Complete Booking  go here ..." />
        <Table items="{profileData>/bookings}" mode="SingleSelectLeft" id="IdProfileaTable">
        <headerToolbar>
            <Toolbar>
                <ToolbarSpacer/>
                <Button 
                    text="Edit"
                    icon="sap-icon://edit"
                    press="onEditBooking"
                    type="Emphasized"/>
            </Toolbar>
        </headerToolbar>

        <columns>
            <Column><Text text="Booking Date"/></Column>
            <Column><Text text="Room"/></Column>
            <Column><Text text="Amount"/></Column>
            <Column><Text text="Status"/></Column>
        </columns>

        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{path:'profileData>Startdate'}"/>
                    <Text text="{profileData>room}"/>
                    <Text text="{path:'profileData>amount', formatter: '.Formatter.formatCurrency'}"/>
                    <Text text="{profileData>status}"/>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
			</IconTabFilter>
			
		</items>
	</IconTabBar>
   
     
   

    


   
   
  </HBox>
</VBox>

    </VBox>
  </Dialog>
</core:FragmentDefinition>
