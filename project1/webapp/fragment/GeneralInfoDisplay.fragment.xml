<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:smartField="sap.ui.comp.smartfield"
>
    <Panel
        expandable="false"
    >
        <f:SimpleForm
            editable="true"
            layout="ColumnLayout"
            columnsM="3"
            columnsL="4"
            columnsXL="6"
        >
            <f:content>
                <!-- Booking Details -->
                <core:Title text="{i18n>bookingDetailsTitle}" />
               <Label text="Room Type" />
                            <Text id="idRoomType2" text="{HostelModel>/BedType}"  />
                            <Label text="Rent Price" /> 
                            <Text id="idPrice3" text="{HostelModel>/FinalPrice} {HostelModel>/Currency}"   />
                
                 <Label text="Payment Method" />
                            <Text text="{HostelModel>/SelectedPriceType}"/>
                <!-- Project Address -->
                <core:Title text="Select Person" />
               <Label text="No of Persons"/>
               <Text text="{HostelModel>/SelectedPerson}"/>

                <!-- Site Contact -->
                <core:Title text="Dates" />
                <Label text="Start Date" />
                           <Text text="{HostelModel>/StartDate}"/>
                            <Label text="End Date" />
                           <Text text="{HostelModel>/EndDate}"/>
                            <Label text="Month/Year" />
                           <Text text="{HostelModel>/SelectedMonths}"/>
             
            </f:content>
        </f:SimpleForm>
    </Panel>
</core:FragmentDefinition>
