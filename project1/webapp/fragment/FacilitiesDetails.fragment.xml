<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:u="sap.ui.unified"
	xmlns:mvc="sap.ui.core.mvc">
	<Dialog
        id="FDD_id_FacilitiesDialog"
        title="Add Room Image"
        type="Message"
        class="sapUiContentPadding">
		<f:SimpleForm
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanXL="4"
            labelSpanL="3"
            labelSpanM="4"
            labelSpanS="12"
            columnsXL="2"
            columnsL="2"
            columnsM="1">
			<f:content>
            <Label text="Branch Code" required="true"/>
				<ComboBox id="FDD_id_RoomType123" placeholder="Select branch Code" selectedKey="{FacilitiesModel>/BranchCode}"
                 items="{BranchModel>/}" showSecondaryValues="true"  change=".onFacilitybranchChange" valueStateText="{i18n>selectBranchCode}">
					<core:ListItem  key="{BranchModel>BranchID}"  text="{BranchModel>BranchID}" additionalText="{BranchModel>Name}"/>
				</ComboBox>
				<Label text="Facility Name" required="true" />
				<Input id="FDD_id_FacilityName" value="{FacilitiesModel>/FacilityName}" placeholder="Enter Facility Name"
                 maxLength="60" liveChange=".onFacilityNameChange"  valueStateText="{i18n>enterFacilityName}" />
				<Label
                    text="Description"
                    required="true"
                />
				<TextArea
                    id="FDD_id_Description"
                    value="{FacilitiesModel>/Description}"
                    placeholder="Enter No Of Description"
                    liveChange="onNameInputLiveChange"
                    valueStateText="Enter Description"
                    maxLength="100"
                />
                <Label text="Attachments" />
					<Table
        id="FDD_id_AttachmentsTable"
        sticky="ColumnHeaders,HeaderToolbar"
        items="{UploaderData>/attachments}"
        inset="false"
        mode="Delete"
        delete="onAttachmentsTableDelete"
        popinLayout="Block"
        busyIndicatorDelay="0"
        width="100%">
						<headerToolbar>
							<OverflowToolbar>
								<ToolbarSpacer />
								<u:FileUploader
                    id="FDD_id_FileUploader"
                    fileType="pdf,jpg,jpeg,png,doc,docx,xls,xlsx,ppt,pptx,txt"
                    name="myFileUpload"
                    multiple="true"
                    uploadUrl=""
                    tooltip="{i18n>toolTipMsgSM}"
                    change="onFileSelected"
                    buttonOnly="true"
                    buttonText="Upload Attachment" />
							</OverflowToolbar>
						</headerToolbar>
						<columns>
							<Column minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
								<Text text="{i18n>FileName}" />
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center" popinDisplay="Inline">
								<Text text="{i18n>FileType}" />
							</Column>
							<!-- <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center" popinDisplay="Inline">
								<Text text="{i18n>FileSize}" />
							</Column> -->
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Text text="{UploaderData>filename}" />
									<Text text="{UploaderData>fileType}" />
									<!-- <Text text="{path:'UploaderData>size', formatter: '.Formatter.bytesToMB'}" /> -->
								</cells>
							</ColumnListItem>
						</items>
					</Table>
			</f:content>
		</f:SimpleForm>
		<footer>
			<Toolbar>
				<ToolbarSpacer />
				<Button text="Save" press="FD_onsavebuttonpress" type="Accept" id="FDD_id_saveButton" class="marginRight" />
				<Button text="Cancel" press="FD_onCancelButtonPress" type="Reject" id="FDD_id_CancelBtn" class="marginRight" />
			</Toolbar>
		</footer>
	</Dialog>
</c:FragmentDefinition>
