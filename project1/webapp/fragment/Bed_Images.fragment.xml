<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
    xmlns:mvc="sap.ui.core.mvc"
>
    <Dialog
        id="FDD_id_FacilitiesDialog"
        title="Add Room Image"
        type="Message"
      class="sapUiContentPadding"
    >
      <f:SimpleForm
    editable="true"
    layout="ResponsiveGridLayout"
    labelSpanXL="3"
    labelSpanL="3"
    labelSpanM="12"
    labelSpanS="12"
    columnsXL="1"
    columnsL="1"
    columnsM="1"
>
    <f:content>
        <Label text="Branch Code" required="true" />
        <ComboBox
            id="BD_id_Branchcode"
            placeholder="Select Branch Code"
            selectedKey="{BedModel>/BranchCode}"
            items="{BranchModel>/}"
            showSecondaryValues="true"
            change=".onFacilitybranchChange"
            valueStateText="{i18n>selectBranchCode}"
            width="50%"
        >
            <core:ListItem
                key="{BranchModel>BranchID}"
                text="{BranchModel>BranchID}"
                additionalText="{BranchModel>Name}"
            />
        </ComboBox>

        <Label text="Bed Type" required="true" />
        <Input
            id="BD_id_BedType"
            value="{BedModel>/Name}"
            placeholder="Enter Bed Type"
            maxLength="60"
            liveChange=".onFacilityNameChange"
            valueStateText="{i18n>enterFacilityName}"
            width="50%"

        />

        <Label text="Room Type" required="true" />
        <ComboBox
            id="BD_Roomtype"
            placeholder="Select Room Type"
            selectedKey="{BedModel>/ACType}"
            width="50%"

        >
            <core:Item key="AC" text="AC" />
            <core:Item key="Non-AC" text="Non-AC" />
        </ComboBox>

        <Label text="Attachment" />
        <Table
            id="FDD_id_AttachmentsTable"
            sticky="ColumnHeaders,HeaderToolbar"
            items="{UploaderData>/attachments}"
            inset="false"
            mode="Delete"
            delete="onAttachmentsTableDelete"
            popinLayout="Block"
            busyIndicatorDelay="0"
            width="100%"
        >
            <headerToolbar>
                <OverflowToolbar>
                    <ToolbarSpacer />
                    <u:FileUploader
                        id="FDD_id_FileUploader"
                        fileType="pdf,jpg,jpeg,png,doc,docx,xls,xlsx,ppt,pptx,txt"
                        name="myFileUpload"
                        multiple="true"
                        uploadUrl=""
                        tooltip="{i18n>toolTipMsgSM}"
                        change="onFileSelected"
                        buttonOnly="true"
                        buttonText="Upload Attachment"
                    />
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
                    <Text text="File name" />
                </Column>
                <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center" popinDisplay="Inline">
                    <Text text="File Type" />
                </Column>
                <!-- <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center" popinDisplay="Inline">
                    <Text text="File Size" />
                </Column> -->
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Text text="{UploaderData>filename}" />
                        <Text text="{UploaderData>fileType}" />
                        <!-- <Text text="{path:'UploaderData>size', formatter: '.Formatter.bytesToMB'}" /> -->
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </f:content>
</f:SimpleForm>

        <footer>
            <Toolbar>
                <ToolbarSpacer />
                <Button
                    text="Save"
                    press="FD_onsavebuttonpress"
                    type="Accept"
                    id="FDD_id_saveButton"
                    class="marginRight myUnifiedBtn"
                />
                <Button
                    text="Cancel"
                    press="BD_onCancelButtonPress"
                    type="Reject"
                    id="BD_id_CancelBtn"
                    class="marginRight myUnifiedBtn"
                />
            </Toolbar>
        </footer>
    </Dialog>
</c:FragmentDefinition>
