<core:FragmentDefinition 
	xmlns="sap.m" 
	xmlns:core="sap.ui.core" 
	xmlns:l="sap.ui.layout">
	<Dialog id="roomDetailID" title="Room Details" type="Message" class="customHeaderColor">
		<customHeader>
			<Bar class="customHeaderColor">
				<contentMiddle>
					<Text text="Room Details" />
				</contentMiddle>
				<contentRight>
					<Button icon="sap-icon://decline" type="Transparent" press=".onCloseRoomDetail" />
				</contentRight>
			</Bar>
		</customHeader>
		<VBox width="100%" class="customHeaderColor sapUiResponsiveContentPadding">
			<ObjectHeader title="{HostelModel>/BedType}" numberUnit="Per Day ({HostelModel>/ACType})" class="whiteText">
				<attributes>
					<ObjectAttribute title="Address" text="{HostelModel>/Address}" />
					<ObjectAttribute title="Capacity" text="{HostelModel>/Capacity}" />
					<ObjectAttribute title="Room Type" text="{HostelModel>/ACType}" />
				</attributes>
			</ObjectHeader>
			<Title text="Choose a plan" class="whiteText sapUiSmallMarginTopBottom"/>
			<l:Grid defaultSpan="L4 M4 S12" hSpacing="1" vSpacing="1" class="sapUiTinyMarginBottom">
				<GenericTile header="Per Day" subheader="₹{HostelModel>/Price}" frameType= "OneByHalf" press=".onSelectPricePlan">
					<customData>
						<core:CustomData key="type" value="daily" />
					</customData>
				</GenericTile>
				<GenericTile header="Per Month" subheader="₹ {HostelModel>/MonthPrice}" frameType= "OneByHalf" press=".onSelectPricePlan">
					<customData>
						<core:CustomData key="type" value="monthly" />
					</customData>
				</GenericTile>
				<GenericTile header="Per Year" subheader="₹{HostelModel>/YearPrice}" frameType= "OneByHalf" press=".onSelectPricePlan">
					<customData>
						<core:CustomData key="type" value="yearly" />
					</customData>
				</GenericTile>
			</l:Grid>
