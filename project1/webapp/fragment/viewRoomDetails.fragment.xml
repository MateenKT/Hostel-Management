<core:FragmentDefinition 
	xmlns="sap.m" 
	xmlns:core="sap.ui.core" 
	xmlns:l="sap.ui.layout">
	<Dialog id="roomDetailID" title="Room Details" type="Message" class="customHeaderColor" afterClose=".onDialogAfterClose">
		<customHeader>
			<Bar class="customHeaderColor">
				<contentMiddle>
					<Text text="Room Details" />
				</contentMiddle>
				<contentRight>
					<Button icon="sap-icon://decline" type="Transparent" press=".onCloseRoomDetail" />
				</contentRight>
			</Bar>
		</customHeader>
		<content>
			<VBox width="100%" class="customHeaderColor">
				<!-- <ObjectHeader title="{HostelModel>/BedType}" numberUnit="Per Day ({HostelModel>/ACType})" class="whiteText"><attributes> -->
				<!-- <ObjectAttribute title="Address" text="{HostelModel>/Address}" /><ObjectAttribute title="Capacity" text="{HostelModel>/Capacity}" /><ObjectAttribute title="Room Type" text="{HostelModel>/ACType}" /> -->
				<Title text="Address: {HostelModel>/Address}" class="sapUiSmallMarginBottom" level="H4" titleStyle="H4"/>
				<Title text="Capacity: {HostelModel>/Capacity}" class="sapUiSmallMarginBottom"  level="H4"  titleStyle="H4"/>
				<Title text="Room Type: {HostelModel>/ACType}" class="sapUiSmallMarginBottom" level="H4" titleStyle="H4"/>
				<!-- </attributes></ObjectHeader> -->
				<Title text="Choose a plan" class="whiteText sapUiSmallMarginTopBottom"/>
				<l:Grid defaultSpan="L4 M4 S12" hSpacing="1" vSpacing="1" class="sapUiTinyMarginBottom">
					<GenericTile header="Per Day" subheader="₹{HostelModel>/Price}" frameType="OneByHalf" press=".onSelectPricePlan">
						<customData>
							<core:CustomData key="type" value="daily" />
						</customData>
					</GenericTile>
					<GenericTile header="Per Month" subheader="₹{HostelModel>/MonthPrice}" frameType="OneByHalf" press=".onSelectPricePlan">
						<customData>
							<core:CustomData key="type" value="monthly" />
						</customData>
					</GenericTile>
					<GenericTile header="Per Year" subheader="₹{HostelModel>/YearPrice}" frameType="OneByHalf" press=".onSelectPricePlan">
						<customData>
							<core:CustomData key="type" value="yearly" />
						</customData>
					</GenericTile>
				</l:Grid>
					<Carousel id="roomImageCarousel" height="380px" width="600px" class="sapUiTinyMarginTop sapUiTinyMarginBottom" backgroundDesign="Transparent" showPageIndicator="true" pageIndicatorPlacement="Bottom" arrowsPlacement="Content" loop="true" visible="{= ${HostelModel>/ImageList} &amp;&amp; ${HostelModel>/ImageList}.length > 0 }" />
					<HBox alignItems="Center" class="noImagePlaceholder" visible="{= !${HostelModel>/ImageList} || ${HostelModel>/ImageList}.length === 0 }">
						<core:Icon src="sap-icon://camera" size="1.8rem" class="sapUiTinyMarginEnd" />
						<Text text="No Image Available" class="whiteText" />
					</HBox>
					<Text text="{HostelModel>/Description}" wrapping="true" class="whiteText sapUiSmallMarginTop sapUiSmallMarginBottom" />
				<HBox justifyContent="End" class="sapUiMediumMarginTop">
					<Button text="Book Now" type="Emphasized" press=".onConfirmBooking" class="sapUiTinyMargin myCustomButton" />
				</HBox>
			</VBox>
			<Panel expandable="true" expanded="true" headerText="Available Facilities" class="customHeaderColor sapUiMediumMarginTop">
				<List items="{FacilityModel>/Facilities}" noDataText="No extra facilities available">
					<CustomListItem>
						<HBox alignItems="Center" class="sapUiSmallMarginBottom customHeaderColor">
							<Image src="{FacilityModel>Image}" width="40px" height="40px" densityAware="false" decorative="false" class="sapUiTinyMarginEnd" />
							<VBox>
								<Text text="{FacilityModel>FacilityName}" />
								<Text text="Price: ₹{FacilityModel>Price}" visible="{= ${FacilityModel>Price} > 0 }" />
							</VBox>
						</HBox>
					</CustomListItem>
				</List>
			</Panel>
		</content>
	</Dialog>
</core:FragmentDefinition>