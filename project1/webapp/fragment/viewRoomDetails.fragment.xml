<core:FragmentDefinition 
	xmlns="sap.m" 
	xmlns:core="sap.ui.core" 
	xmlns:l="sap.ui.layout">
	<Dialog id="roomDetailID" title="Room Details" type="Message" class="a" afterClose=".onDialogAfterClose">
		<customHeader>
			<Bar class="barheader">
				<contentMiddle>
					<Text text="Room Details" />
				</contentMiddle>
				<contentRight>
					<Button icon="sap-icon://decline" type="Transparent" press=".onCloseRoomDetail" />
				</contentRight>
			</Bar>
		</customHeader>



		<!-- level="H6" titleStyle="H6" -->
		<content>
			<VBox width="100%" class="">

				<Title text="Address: {HostelModel>/Address}" class="sapUiSmallMarginBottom customTitleColor" />
				<Title text="Capacity: {HostelModel>/Capacity}" class="sapUiSmallMarginBottom customTitleColor" />
				<Title text="Room Type: {HostelModel>/ACType}" class="sapUiSmallMarginBottom customTitleColor" />

				<Title text="Choose a plan" class="whiteText sapUiSmallMarginTopBottom customTitleColor" />
				<l:Grid defaultSpan="L4 M4 S12" hSpacing="1" vSpacing="1" class="sapUiTinyMarginBottom">
					<GenericTile header="Per Day" class="" subheader="₹{HostelModel>/Price}" frameType="OneByHalf" press=".onSelectPricePlan">
						<customData>
							<core:CustomData key="type" value="daily" />
						</customData>
					</GenericTile>
					<GenericTile header="Per Month" class="" subheader="₹{HostelModel>/MonthPrice}" frameType="OneByHalf" press=".onSelectPricePlan">
						<customData>
							<core:CustomData key="type" value="monthly" />
						</customData>
					</GenericTile>
					<GenericTile header="Per Year" class="" subheader="₹{HostelModel>/YearPrice}" frameType="OneByHalf" press=".onSelectPricePlan">
						<customData>
							<core:CustomData key="type" value="yearly" />
						</customData>
					</GenericTile>
				</l:Grid>
					<Carousel id="roomImageCarousel" width="100%" class="roomCarouselImage sapUiTinyMarginTop sapUiTinyMarginBottom" backgroundDesign="Transparent" showPageIndicator="true" pageIndicatorPlacement="Bottom" arrowsPlacement="Content" loop="true" visible="{= ${HostelModel>/ImageList} &amp;&amp; ${HostelModel>/ImageList}.length > 0 }" />
					<HBox alignItems="Center" class="noImagePlaceholder" visible="{= !${HostelModel>/ImageList} || ${HostelModel>/ImageList}.length === 0 }">
						<core:Icon src="sap-icon://camera" size="1.8rem" class="sapUiTinyMarginEnd" />
						<Text text="No Image Available" class="whiteText" />
					</HBox>
					<Title text="{HostelModel>/Description}" wrapping="true" class="whiteText customTitleColor" />
				<HBox justifyContent="End" class="sapUiMediumMarginTop">
					<Button text="Book Now" type="Emphasized" press=".onConfirmBooking" class="sapUiTinyMargin myCustomButton" />
				</HBox>
			</VBox>
			<Panel expandable="true" expanded="true" headerText="Available Facilities" class="customHeaderColor sapUiMediumMarginTop">
				<List items="{FacilityModel>/Facilities}" noDataText="No extra facilities available"  >
					<CustomListItem>
						<HBox alignItems="Center" class="sapUiSmallMarginBottom customHeaderColor">
							<Image src="{FacilityModel>Image}" width="40px" height="40px" densityAware="false" decorative="false" class="sapUiTinyMarginEnd" />
							<VBox>
								<Text text="{FacilityModel>FacilityName}" />
								<Text text="Price: ₹{FacilityModel>Price}" visible="{= ${FacilityModel>Price} > 0 }" />
							</VBox>
						</HBox>
					</CustomListItem>
				</List>
			</Panel>
		</content>
	</Dialog>
</core:FragmentDefinition>