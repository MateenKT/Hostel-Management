<Dialog title="Share Coupon" contentWidth="420px" draggable="true" resizable="false" 
	xmlns="sap.m" 
	xmlns:core="sap.ui.core" 
	xmlns:f="sap.ui.layout.form">
	<f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanL="12" labelSpanM="12" emptySpanL="0" emptySpanM="0" columnsL="1" columnsM="1" width="100%">
		<!-- Branch -->
		<Label text="Branch" required="true"/>
		<ComboBox placeholder="Select Branch" id="cbBranch" width="100%" items="{sBRModel>/}" selectedKey="{CouponView>/CurrentCoupon/BranchCode}" showSecondaryValues="true">
			<core:ListItem key="{sBRModel>BranchID}" text="{sBRModel>Name}" additionalText="{sBRModel>BranchID}"/>		
            </ComboBox>


		<!-- Role -->
		<Label text="Role" required="true"/>
		<ComboBox id="cbRole" width="100%" items="{RoleModel>/}" selectionChange="onRoleChange" placeholder="Select role" required="true">
			<core:Item key="{RoleModel>}" text="{RoleModel>}" />
		</ComboBox>
		<!-- Recipients -->
		<Label text="Recipients" required="true"/>
<MultiComboBox id="cbUser" width="100%" items="{RecipientModel>/}" selectionChange="onUserChange" showSecondaryValues="true" required="true">
	<core:ListItem key="{RecipientModel>Email}" text="{RecipientModel>BranchCode}" additionalText="{RecipientModel>UserName}" />
</MultiComboBox>
		<!-- Select All -->
		<Label text=" "/>
		<Button text="Select All" type="Transparent" press="onSelectAllUsers"/>
		<!-- Emails -->
		<Label text="Selected Emails"/>
		<Input id="inpEmail" width="100%" editable="false" placeholder="Email will appear here"/>
	</f:SimpleForm>
	<beginButton>
		<Button text="Send Coupon" press="onConfirmShareCoupon"/>
	</beginButton>
	<endButton>
		<Button text="Cancel" press="onCloseShareDialog"/>
	</endButton>
</Dialog>