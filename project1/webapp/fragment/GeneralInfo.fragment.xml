<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:smartField="sap.ui.comp.smartfield"
>
    <Panel
        headerText=""
        expandable="false"
        class="customPanelHeader"
    >
        <f:SimpleForm
            editable="true"
            layout="ColumnLayout"
            columnsM="2"
            columnsL="2"
            columnsXL="6"
        >
            <f:content>
                <!-- Booking Details -->
                <core:Title text="" />
              <!-- <Input id="idUserID" value="{HostelModel>/UserID}" visible="true" /> -->
               <Label text="Room Type" />
                            <Text id="GI_Roomtype"  text="{=${HostelModel>/BedType} + ' - ' + ${HostelModel>/ACType}}"  width="100%" /> 
             <Label text="Rent Price" />
                            <Text  text="{HostelModel>/FinalPrice} {HostelModel>/Currency}" width="100%" />     
                <Label text="Booking Duration" required="true" />
<ComboBox
    id="idPaymentMethod1"
    placeholder="Select Payment Method"
    value="{HostelModel>/SelectedPriceType}"
    width="100%"
    selectionChange="onRoomDurationChange"
>
    <core:Item text="Per Day"/>
    <core:Item  text="Per Month"/>
    <core:Item  text="Per Year"/>
</ComboBox>
                               
              
            <Label text="No of Persons" required="true" />
<Select
    id="id_Noofperson1"
    width="100%"
    selectedKey="{HostelModel>/SelectedPerson}"
    change="onNoOfPersonSelect"
    items="{
        path: 'HostelModel>/NoOfPersonsList'
    }"
>   
    <core:Item key="{HostelModel>key}" text="{HostelModel>text}" />
</Select>
                <!-- Site Contact -->
                <Label text="Start Date" required="true" />
                            <DatePicker
                                id="idStartDate1"
                                value="{HostelModel>/StartDate}"
                                valueFormat="dd/MM/yyyy"
                                displayFormat="dd/MM/yyyy"
                                change="onFieldValidation"
                                width="100%"
                                minDate="{path: 'HostelModel>/TodayDate'}"
                            />
                          <Label text="How many Month/Year" />
<Select
    id="idMonthsSelect"
    width="100%"
    selectedKey="{HostelModel>/SelectedMonths}"
    change="onMonthSelectionChange"
    visible="{OBTNModel>/Month}"
    forceSelection="true"
>
    <core:Item key="1" text="1" />
    <core:Item key="2" text="2" />
    <core:Item key="3" text="3" />
    <core:Item key="4" text="4" />
    <core:Item key="5" text="5" />
    <core:Item key="6" text="6" />
    <core:Item key="7" text="7" />
    <core:Item key="8" text="8" />
    <core:Item key="9" text="9" />
    <core:Item key="10" text="10" />
    <core:Item key="11" text="11" />
</Select>


  <Label text="End Date" required="true" />
<DatePicker
    id="idEndDate1"
    value="{HostelModel>/EndDate}"
    valueFormat="dd/MM/yyyy"
    displayFormat="dd/MM/yyyy"
    change="onFieldValidation"
    width="100%"
    editable="false"
/>




    
            </f:content>
        </f:SimpleForm>
    </Panel>
</core:FragmentDefinition>
