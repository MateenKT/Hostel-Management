<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
>
    <Dialog
        id="idPaymentDialog"
        title="Proceed to Payment"
        contentWidth="400px"
        afterClose=".onPaymentClose"
        class="sapUiContentPadding"
    >
        <VBox width="100%" renderType="Bare">
            
            <!-- Payment Type Radio Buttons -->
            <RadioButtonGroup
                id="idPaymentTypeGroup"
                columns="2"
                select=".onPaymentTypeSelect"
            >
                <buttons>
                    <RadioButton text="UPI" selected="true" />
                    <RadioButton text="Debit/Credit Card" />
                </buttons>
            </RadioButtonGroup>

            <!-- Common Fields (Visible for both types) -->
            <l:VerticalLayout width="100%" class="sapUiSmallMarginTop">
                <Label text="Bank Name" />
                <Input id="idBankName" placeholder="Enter Bank Name" />

                <Label text="Amount" />
                <Input id="idAmount" type="Number" placeholder="Enter Amount" />

                <Label text="Payment Type" />
                <Input id="idPaymentTypeField" placeholder="Enter Payment Type (e.g., Yearly)" />

                <Label text="Bank Transaction ID" />
                <Input id="idTransactionID" placeholder="Enter Transaction ID" />

                <Label text="Date" />
                <DatePicker id="idPaymentDate" displayFormat="yyyy-MM-dd" valueFormat="yyyy-MM-dd" />

                <Label text="Currency" />
                <Input id="idCurrency" placeholder="Enter Currency (e.g., INR)" />
            </l:VerticalLayout>

            <!-- UPI Section -->
            <VBox id="idUPISection" class="sapUiSmallMarginTop">
                <Label text="UPI ID" />
                <Input id="idUPIID" placeholder="Enter your UPI ID" />
                <Image src="images/UPI.jpg" width="150px" class="sapUiMediumMarginTop" />
            </VBox>

            <!-- Card Section -->
            <VBox id="idCardSection" visible="false" class="sapUiSmallMarginTop">
                <Label text="Card Number" />
                <Input id="idCardNumber" placeholder="Enter Card Number" />

                <Label text="Expiry Date" />
                <Input id="idCardExpiry" placeholder="MM/YY" />

                <Label text="CVV" />
                <Input id="idCardCVV" type="Password" placeholder="***" />
            </VBox>
        </VBox>

        <beginButton>
            <Button text="Submit Payment" type="Emphasized" press=".onSubmitPress" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press=".onPaymentClose" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
