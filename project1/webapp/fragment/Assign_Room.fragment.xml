<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="sds"
        title="Assign Room"
        type="Message"
        class="sapUiContentPadding"
    >
        <f:SimpleForm
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanXL="4"
            labelSpanL="3"
            labelSpanM="4"
            labelSpanS="12"
            columnsXL="2"
            columnsL="2"
            columnsM="1"
        >
            <f:content>
                <Label
                    text="Customer Name"
                    required="true"
                />
                <Text 
                id="idCustomerNameText" 
                text="{HostelModel>/CustomerName}"
                 />
                <Label
                    text="Assign Room"
                    required="true"
                />
                <ComboBox
                id="idRoomNumber1"
                    placeholder="Select Room Number"
                    selectedKey="{HostelModel>/RoomNumber}"
                           items="{AvailableRoomsModel>/}"
                           valueStateText="Select Room No"
                           change="onRoomNoChange"
                >
                    <core:ListItem
                        key="{AvailableRoomsModel>RoomNo}"
                        text="{AvailableRoomsModel>RoomNo}"
                    />
                  
                </ComboBox>
            </f:content>
        </f:SimpleForm>
        <footer>
            <Toolbar>
                <ToolbarSpacer />
                <Button
                    text="Save"
                    press="ARNO_onsavebuttonpress"
                    type="Accept"
                    id="HM_id_saveButton"
                    class="marginRight"
                />
                <Button
                    text="Cancel"
                    press="HM_onCancelButtonPress"
                    type="Reject"
                    id="HM_id_CancelButton"
                    class="marginRight"
                />
            </Toolbar>
        </footer>
    </Dialog>
</c:FragmentDefinition>
