<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="sds"
        title="Assign Room"
        type="Message"
        class="sapUiContentPadding"
    >
        <f:SimpleForm
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanXL="4"
            labelSpanL="3"
            labelSpanM="4"
            labelSpanS="12"
            columnsXL="2"
            columnsL="2"
            columnsM="1"
        >
            <f:content>
                <Label
                    text="Customer Name"
                    required="true"
                />
                <Text id="idCustomerNameText" text="{HostelModel>/CustomerName}" />
                <Label
                    text="Assign Room"
                    required="true"
                />
                <ComboBox
                    placeholder="Select Room Number"
                    selectedKey="{HostelModel>/RoomNumber}"
                >
                    <core:ListItem
                        key="Room1"
                        text="RN001"
                    />
                    <core:ListItem
                        key="Room2"
                        text="RN002"
                    />
                    <core:ListItem
                        key="Room3"
                        text="RN003"
                    />
                </ComboBox>
            </f:content>
        </f:SimpleForm>
        <footer>
            <Toolbar>
                <ToolbarSpacer />
                <Button
                    text="Save"
                    press="FCIA_onsavebuttonpress"
                    type="Accept"
                    id="HM_id_saveButton"
                    class="marginRight"
                />
                <Button
                    text="Cancel"
                    press="HM_onCancelButtonPress"
                    type="Reject"
                    id="HM_id_CancelButton"
                    class="marginRight"
                />
            </Toolbar>
        </footer>
    </Dialog>
</c:FragmentDefinition>
