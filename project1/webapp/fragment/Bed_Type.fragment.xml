<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
>
    <Dialog
        id="sds12"
        title="Bed Details"
        type="Message"
        class="sapUiContentPadding"
        resizable="true"
        draggable="true"
        contentWidth="40%"
        contentHeight="auto"
    >
        <f:SimpleForm
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanXL="4"
            labelSpanL="3"
            labelSpanM="4"
            labelSpanS="12"
            columnsXL="2"
            columnsL="2"
            columnsM="1"
        >
            <f:content>
                <Label
                    text="Branch Code"
                    required="true"
                />
                <ComboBox
                    id="idRoomType12"
                    selectedKey="{BedModel>/BranchCode}"
                    items="{BranchModel>/}"
                    change="onbranchChange"
                    showSecondaryValues="true"
                    placeholder="Select Branch Code"
                >
                    <core:ListItem
                        key="{BranchModel>BranchID}"
                        text="{BranchModel>BranchID} - {BranchModel>Name}"
                        additionalText="{BranchModel>City}"
                    />
                </ComboBox>

                <Label
                    text="Bed Type"
                    required="true"
                />
                <Input
                    id="idBedType"
                    value="{BedModel>/Name}"
                    placeholder="Enter Bed Type"
                    maxLength="50"
                />
                <Label
                    text="Room Type"
                    required="true"
                />
                <ComboBox
                    id="idRoomtype"
                    selectedKey="{BedModel>/ACType}"
                    change="onbranchChange"
                    placeholder="Select Room Type"
                >
                    <core:ListItem
                        key="AC"
                        text="AC"
                    />
                    <core:ListItem
                        key="Non-Ac"
                        text="Non-Ac"
                    />
                </ComboBox>

                <Label
                    text="No Of Person"
                    required="true"
                />
                <Input
                    id="idR"
                    value="{BedModel>/NoOfPerson}"
                    placeholder="Enter No Of Person"
                    liveChange="onNoOfPersonInputLiveChange"
                    maxLength="2"
                />
                <Label
                    text="No Of Rooms"
                    required="true"
                />
                <Input
                    id="id_MaxBeds"
                    value="{BedModel>/MaxBeds}"
                    placeholder="Enter No Of Rooms"
                    maxLength="3"
                    liveChange="onNoOfPersonInputLiveChange"
                    />
                <Label
                    text="Description"
                    required="true"
                />
                <TextArea
                    id="id_Description"
                    value="{BedModel>/Description}"
                    maxLength="150"
                    placeholder="Enter Description"
                />
                <Label
                    text="Add Image"
                    required="true"
                />

                <Table
                    id="id_Bed_AttachmentTable"
                    items="{UploaderData>/attachments}"
                    mode="Delete"
                    popinLayout="Block"
                    delete="onTokenDelete"
                    width="100%"
                >
                    <headerToolbar>
                        <OverflowToolbar>
                            <u:FileUploader
                                id="BT_id_FileUploader"
                                fileType="jpg,jpeg,png"
                                multiple="true"
                                buttonOnly="true"
                                buttonText="Upload Images"
                                change="onFacilityFileChange"
                            />
                        </OverflowToolbar>
                    </headerToolbar>

                    <columns>
                        <Column>
                            <Text text="File Name" />
                        </Column>
                        <Column hAlign="Center">
                            <Text text="File Type" />
                        </Column>
                        <Column hAlign="Center">
                            <Text text="File Size" />
                        </Column>
                    </columns>

                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{UploaderData>filename}" />
                                <Text text="{UploaderData>fileType}" />
                                <Text text="{UploaderData>size}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </f:content>
        </f:SimpleForm>

        <footer>
            <Toolbar>
                <ToolbarSpacer />
                <Button
                    text="Save"
                    press="BT_onsavebuttonpress"
                    type="Accept"
                />
                <Button
                    text="Cancel"
                    press="BT_onCancelButtonPress"
                    type="Reject"
                />
            </Toolbar>
        </footer>
    </Dialog>
</c:FragmentDefinition>