<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
    <Dialog
        id="EctraFaciliotiID"
        title="Add Facility"
        type="Message"
        class="sapUiContentPadding">

        <f:SimpleForm
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanXL="4"
            labelSpanL="3"
            labelSpanM="4"
            labelSpanS="12"
            columnsXL="2"
            columnsL="2"
            columnsM="1">

            <f:content>
                <Label text="Facility Name" required="true" />
                <ComboBox
                    id="idFacilityCombo"
                    placeholder="Select Facility"
                    items="{ExtraFacilitiModel>/}"
                    selectionChange=".onFacilitiSelectionChange">
                    <core:ListItem 
                        key="{ExtraFacilitiModel>ID}" 
                        text="{ExtraFacilitiModel>FacilityName}" />
                </ComboBox>

                <Label text="Price (â‚¹)" />
                <Input id="idFacilityPrice" value="{ExtraFacilitiModel>/Price}" editable="false" />

                <Label text="Start Date" />
                <DatePicker id="idFacilityStartDate" valueFormat="yyyy-MM-dd" displayFormat="dd/MM/yyyy" change=".onFacilityDateChange" />

                <Label text="End Date" />
                <DatePicker id="idFacilityEndDate" valueFormat="yyyy-MM-dd" displayFormat="dd/MM/yyyy" change=".onFacilityDateChange" />

                <Label text="Days" />
                <Input id="idFacilityDays" value="" editable="false" />
            </f:content>
        </f:SimpleForm>

        <footer>
            <Toolbar>
                <ToolbarSpacer />
                <Button text="Add" press=".onAddFacilitySave" type="Accept" />
                <Button text="Cancel" press=".onAddFacilityCancel" type="Reject" />
            </Toolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
