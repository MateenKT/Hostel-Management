<core:FragmentDefinition 
	xmlns="sap.m" 
	xmlns:core="sap.ui.core" 
	xmlns:l="sap.ui.layout" 
	xmlns:f="sap.ui.layout.form">
	<Dialog id="couponDialog" title="{= ${CouponView>/DialogMode} === 'Add' ? 'Add Coupon' : 'Edit Coupon'}" draggable="true" resizable="true">
		<content>
			<f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanXL="3" labelSpanL="3" labelSpanM="3" emptySpanXL="4" emptySpanL="4" emptySpanM="4" columnsXL="2" columnsL="2" columnsM="1">
				<f:content>
					<Label text="Discount Type"/>
					<ComboBox selectedKey="{CouponView>/CurrentCoupon/DiscountType}">
						<items>
							<core:Item key="Percentage" text="Percentage"/>
							<core:Item key="Fixed Amount" text="Fixed Amount"/>
						</items>
					</ComboBox>
					<Label text="Discount Value"/>
					<Input value="{CouponView>/CurrentCoupon/DiscountValue}" type="Number"/>
					<Label text="Max Uses"/>
					<Input value="{CouponView>/CurrentCoupon/MaxUses}" type="Number"/>
					<Label text="Used Count"/>
					<Input value="{CouponView>/CurrentCoupon/UsedCount}" type="Number"/>
					<Label text="Per User Limit"/>
					<Input value="{CouponView>/CurrentCoupon/PerUserLimit}" type="Number"/>
					<Label text="Min Order Value"/>
					<Input value="{CouponView>/CurrentCoupon/MinOrderValue}" type="Number"/>
					<Label text="Start Date"/>
					<DatePicker id="dpStartDate" value="{CouponView>/CurrentCoupon/StartDate}" valueFormat="yyyy-MM-dd" displayFormat="dd/MM/yyyy"/>
					<Label text="End Date"/>
					<DatePicker id="dpEndDate" value="{CouponView>/CurrentCoupon/EndDate}" valueFormat="yyyy-MM-dd" displayFormat="dd/MM/yyyy"/>
					<Label text="Status"/>
					<Input value="{CouponView>/CurrentCoupon/Status}" enabled="false"/>
					<Label text="Created By"/>
					<Input value="{CouponView>/CurrentCoupon/CreatedBy}"/>
					<Label text="Created At"/>
					<Input value="{CouponView>/CurrentCoupon/CreatedAt}" enabled="false"/>
				</f:content>
			</f:SimpleForm>
		</content>
		<beginButton>
			<Button text="Save" type="Emphasized" press="onSaveCoupon"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onCancelCouponDialog"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>