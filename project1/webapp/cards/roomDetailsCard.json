{
    "sap.card": {
        "type": "Object",
        "data": {
            "path": "/",
            "json": {
                "BedType": "{HostelModel>/BedType}",
                "Capacity":     "{HostelModel>/Capacity}",
                "ACType": "{HostelModel>/ACType}",
                "Description": "{HostelModel>/Description}"
            }
        },
        "header": {
            "title": "{BedType}",
            "icon": {
                "src": "sap-icon://bed"
            }
        },
        "content": {
            "groups": [
                {
                    "items": [
                        {
                            "label": "Capacity",
                            "value": "{Capacity}",
                            "icon": {
                                "src": "sap-icon://group"
                            }
                        },
                        {
                            "label": "Room Type",
                            "value": "{ACType}",
                            "icon": {
                                "src": "sap-icon://temperature"
                            }
                        }
                    ]
                }
            ]
        }
    }
}