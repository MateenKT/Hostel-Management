<mvc:View
    controllerName="sap.ui.com.project1.controller.Bed_Images"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:suite="sap.suite.ui.commons"
    xmlns="sap.uxap"
    xmlns:uxap="sap.uxap"
    xmlns:richtexteditor="sap.ui.richtexteditor"
    xmlns:layout="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:c="sap.ui.core"
    displayBlock="true"
    height="100%"
    xmlns:core="sap.ui.core"
    busyIndicatorDelay="0"
    xmlns:u="sap.ui.unified"
>
    <m:Page
        navButtonPress="BI_onButtonPress"
        showNavButton="true"
        title="Bed Details"
    >
        <m:headerContent>
            <m:Button
                press="onLogout"
                icon="sap-icon://log"
                tooltip="{i18n>logoutTooltip}"
                type="Transparent"
            />
        </m:headerContent>
        <ObjectPageLayout id="ObjectPageLayout">
            <!-- <headerTitle><ObjectPageDynamicHeaderTitle><expandedHeading><m:Title text="{objectModel>/0/PurchaseOrder/0/CustomerName}" wrapping="true" /></expandedHeading><snappedHeading /></ObjectPageDynamicHeaderTitle></headerTitle><headerContent><m:FlexBox wrap="Wrap" fitContainer="true"><m:Avatar class="sapUiSmallMarginEnd" src="../image/logo.jpeg" displaySize="L" /><layout:VerticalLayout class="sapUiSmallMarginBeginEnd"><m:ObjectIdentifier title="Customer Address" text="{objectModel>/0/PurchaseOrder/0/Address}" tooltip="Customer Address" /></layout:VerticalLayout><layout:VerticalLayout class="sapUiSmallMarginBeginEnd"><m:ObjectIdentifier title="PAN Number" text="{objectModel>/0/PurchaseOrder/0/PAN}" tooltip="PAN Number" /></layout:VerticalLayout><layout:VerticalLayout class="sapUiSmallMarginBeginEnd"><m:ObjectIdentifier title="Type" text="{objectModel>/0/PurchaseOrder/0/Type}" tooltip="Type" /></layout:VerticalLayout></m:FlexBox></headerContent> -->
            <sections>
                <ObjectPageSection
                    titleUppercase="false"
                    id="purchaseOrderHeaderSection1"
                    title="Bed Information"
                >
                    <subSections>
                        <ObjectPageSubSection id="dsd1">
                            <blocks>
                                <f:SimpleForm
                                    id="idsimpleCompanyDetails"
                                    busyIndicatorDelay="0"
                                    editable="true"
                                    layout="ColumnLayout"
                                    labelSpanXL="2"
                                    labelSpanL="3"
                                    labelSpanM="2"
                                    labelSpanS="12"
                                    adjustLabelSpan="false"
                                    emptySpanXL="0"
                                    emptySpanL="0"
                                    emptySpanM="0"
                                    emptySpanS="0"
                                    columnsXL="3"
                                    columnsL="2"
                                    columnsM="2"
                                    singleContainerFullSize="false"
                                >
                                    <f:content>
                                        <m:Label
                                            text="Branch Code"
                                            required="true"
                                        />
                                        <m:ComboBox
                                            id="idRoomType12"
                                            placeholder="Select branch Code"
                                            selectedKey="{BedImageModel>/BranchCode}"
                                            items="{BranchModel>/}"
                                            change="onbranchChange"
                                            showSecondaryValues="true"
                                            valueStateText="Select Branch Code"
                                            editable="{editable>/Edit}"
                                        >
                                            <core:ListItem
                                                key="{BranchModel>BranchID}"
                                                text="{BranchModel>BranchID}"
                                                additionalText="{BranchModel>Name}"
                                            />
                                        </m:ComboBox>
                                        <m:Label
                                            text="Bed Type"
                                            required="true"
                                        />
                                        <!-- <ComboBox id="idBedType" placeholder="Select Bed Type" selectedKey="{BedModel>/Name}"><core:ListItem key="Single Bed" text="Single Bed" /><core:ListItem key="Double Bed" text="Double Bed" /><core:ListItem key="Four Bed" text="Four Bed" /> -->
                                        <m:Input
                                            id="idBedType"
                                            value="{BedImageModel>/Name}"
                                            placeholder="Enter Bed Type"
                                            maxLength="60"
                                            liveChange="onNameInputLiveChange"
                                            valueStateText="Enter Bed Type"
                                            editable="{editable>/Edit}"
                                        />
                                        <m:Label
                                            text="Room Type"
                                            required="true"
                                        />
                                        <m:ComboBox
                                            id="idRoomtype"
                                            placeholder="Select Room type"
                                            selectedKey="{BedImageModel>/ACType}"
                                            change="onbranchChange"
                                            valueStateText="Select Room Type"
                                            editable="{editable>/Edit}"
                                        >
                                            <core:ListItem
                                                key="AC"
                                                text="AC"
                                            />
                                            <core:ListItem
                                                key="Non-Ac"
                                                text="Non-Ac"
                                            />
                                        </m:ComboBox>
                                        <m:Label
                                            text="No Of Person"
                                            required="true"
                                        />
                                        <m:Input
                                            id="idR"
                                            value="{BedImageModel>/NoOfPerson}"
                                            placeholder="Enter No Of person"
                                            liveChange="onNameInputLiveChange"
                                            type="Number"
                                            valueStateText="Enter No of person"
                                            editable="{editable>/Edit}"
                                        />
                                        <m:Label
                                            text="Max no of rooms"
                                            required="true"
                                        />
                                        <m:Input
                                            id="id_MaxBeds"
                                            value="{BedImageModel>/MaxBeds}"
                                            placeholder="Enter No of rooms"
                                            liveChange="onNameInputLiveChange"
                                            type="Number"
                                            valueStateText="Enter Max no of rooms"
                                            editable="{editable>/Edit}"
                                        />
                                        <m:Label
                                            text="Description"
                                            required="true"
                                        />
                                        <m:TextArea
                                            id="id_Description"
                                            value="{BedImageModel>/Description}"
                                            placeholder="Enter No Of Description"
                                            liveChange="onNameInputLiveChange"
                                            valueStateText="Enter Description"
                                            maxLength="100"
                                            editable="{editable>/Edit}"
                                        />
                                    </f:content>
                                </f:SimpleForm>
                            </blocks>
                        </ObjectPageSubSection>
                    </subSections>
                </ObjectPageSection>
                <ObjectPageSection
                    titleUppercase="false"
                    id="purchaseOrderSection"
                    title="Images"
                >
                    <subSections>
                        <ObjectPageSubSection id="POO_Purchaseordersection">
                            <blocks>
                             <m:HBox
    id="idImagesContainer"
    wrap="true"
    justifyContent="Start"
    alignItems="Start"
    class="sapUiSmallMargin"
    items="{DisplayImagesModel>/DisplayImages}"
>
    <m:VBox
        class="sapUiSmallMarginEnd"
        width="150px"
        alignItems="Center"
        justifyContent="Center"
    >
        <!-- Normal Image Display -->
        <m:Image
            src="{DisplayImagesModel>src}"
            width="120px"
            height="120px"
            press="onImagePress"
            visible="{= ${DisplayImagesModel>isPlaceholder} === false }"
        />

        <!-- Placeholder Box (visible only when no image) -->
        <m:VBox
            visible="{= ${DisplayImagesModel>isPlaceholder} === true &amp;&amp; ${editable>/Edit} === true }"
            width="120px"
            height="120px"
            alignItems="Center"
            justifyContent="Center"
          
                     class="placeholderBox"
        >
            <u:FileUploader
            id="fileUploader"
            icon="sap-icon://add"
            width="120px"
            style="Transparent"
            tooltip="Add Image"
            placeholder=" "
            buttonOnly="true"
            sameFilenameAllowed="true"
            visible="{= ${DisplayImagesModel>isPlaceholder} === true &amp;&amp; ${editable>/Edit} === true }"
            change=".onFileSelected"
        />
        </m:VBox>

       

        <!-- File name -->
        <m:Text
            text="{DisplayImagesModel>fileName}"
            textAlign="Center"
            wrapping="true"
            visible="{= ${DisplayImagesModel>isPlaceholder} === false }"
        />

        <!-- Delete icon -->
        <m:Button
            icon="sap-icon://delete"
            type="Reject"
            visible="{= ${editable>/Edit} === true &amp;&amp; ${DisplayImagesModel>isPlaceholder} === false }"
            press=".onDeleteImage"
            tooltip="Delete Image"
            width="100%"
        />
    </m:VBox>
</m:HBox>

                            </blocks>
                        </ObjectPageSubSection>
                    </subSections>
                </ObjectPageSection>
            </sections>
        </ObjectPageLayout>
        <m:footer>
            <m:Bar id="IA_id_FooterBar">
                <m:contentRight>
                    <m:Button
                        id="BI_ideditButton"
                        visible="{= !${editable>/Edit} }"
                        text="Edit"
                        type="Transparent"
                        press="BI_onEditButtonPress"
                    />

                    <m:Button
                        id="POO_idSaveButton"
                        visible="{=${editable>/Edit}}"
                        text="Save"
                        type="Accept"
                        press="BT_onsavebuttonpress"
                    />
                </m:contentRight>
            </m:Bar>
        </m:footer>
    </m:Page>
</mvc:View>
