<mvc:View controllerName="sap.ui.com.project1.controller.FacilitiesDetails"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:m="sap.m"
	xmlns:c="sap.ui.core"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:core="sap.ui.core"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0">
	<Page  showHeader="true" >
		<customHeader>
			<Bar>
				<contentLeft>
					<Button icon="sap-icon://nav-back" press=".onNavBack" />
					<Title text="Shah Hostel" class="customPageTitle"/>
				</contentLeft>
				<contentRight>
					<Button icon="sap-icon://log" press=".onHome" />
				</contentRight>
			</Bar>
		</customHeader>
		<content>
			<fb:FilterBar
                id="FD_id_FilterbarEmployee"
                persistencyKey="myPersKey"
                useToolbar="false"
                clear="FC_onPressClear"
                showClearOnFB="true"
                search="FC_onSearch"
                filterChange="IA_.onFilterChange"
                afterVariantLoad="IA_.onAfterVariantLoad"
                showFilterConfiguration="false"
                filterContainerWidth="auto">
				<fb:filterGroupItems>
					<fb:FilterGroupItem
                        name="Facility Name"
                        label="Facility Name"
                        groupName="Group"
                        visibleInFilterBar="true"
                    >
						<fb:control>
							<ComboBox
                                id="FD_id_FacilityName"
                                items="{Facilities>/}"
                                showClearIcon="true"
                            >
								<core:Item
                                    key="{Facilities>FacilityName}"
                                    text="{Facilities>FacilityName}"
                                />
							</ComboBox>
						</fb:control>
					</fb:FilterGroupItem>
				</fb:filterGroupItems>
			</fb:FilterBar>
			<Table
                id="FD_id_facilityTable"
                sticky="ColumnHeaders,HeaderToolbar"
                mode="SingleSelectLeft"
                width="auto" busyIndicatorDelay="0"
                class="sapUiResponsiveMargin"
                items="{path: 'Facilities>/'}">
				<headerToolbar>
					<OverflowToolbar>
						<Title  text="facilities ({=${Facilities>/}.length})" />
						<ToolbarSpacer />
						<Button text="Add Facility" press="FD_RoomDetails" type="Accept"/>
						<Button text="Edit" press="FD_EditDetails" type="Transparent"/>
						<Button text="Delete" press="HM_DeleteDetails" type="Reject"/>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column  demandPopin="true">
						<Text text="Facility Name"/>
					</Column>
					<Column demandPopin="true">
						<Text text="Description"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text  text="Room Image"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{Facilities>FacilityName}" />
                            <ExpandableText text="{Facilities>Description}" maxCharacters="20"></ExpandableText>
							<Button text="View" press="FC_viewroom" type="Transparent"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>
