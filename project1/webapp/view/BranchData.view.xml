<mvc:View
    controllerName="sap.ui.com.project1.controller.BranchData"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0"
>
    <Page showHeader="true">
        <headerContent>
			<core:Fragment fragmentName="sap.ui.com.project1.fragment.Header" type="XML"/>
		</headerContent>
        <content>
            <fb:FilterBar
                id="MD_id_Filterbar"
                persistencyKey="myPersKey"
                useToolbar="false"
                clear="MD_onPressClear"
                showClearOnFB="true"
                search="MD_onSearch"
                showFilterConfiguration="false"
                filterContainerWidth="auto"
            >
                <fb:filterGroupItems>
                    <fb:FilterGroupItem
                        name="Branch Code"
                        label="Branch Code"
                        groupName="Group"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <ComboBox
                                id="MD_id_BranchCode"
                                items="{mainModel>/}"
                                showClearIcon="true"
                            >
                                <core:Item
                                    key="{mainModel>BranchID}"
                                    text="{mainModel>BranchID}"
                                />
                            </ComboBox>
                        </fb:control>
                    </fb:FilterGroupItem>
                </fb:filterGroupItems>

                <fb:filterGroupItems>
                    <fb:FilterGroupItem
                        name="Pincode"
                        label="Pincode"
                        groupName="Group"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <ComboBox
                                id="MD_id_Pincode"
                                items="{mainModel>/}"
                                showClearIcon="true"
                            >
                                <core:ListItem
                                    key="{mainModel>Pincode}"
                                    text="{mainModel>Pincode}"
                                />
                            </ComboBox>
                        </fb:control>
                    </fb:FilterGroupItem>
                </fb:filterGroupItems>
            </fb:FilterBar>
            <Table
                id="id_MD_Table"
                sticky="ColumnHeaders,HeaderToolbar"
                mode="SingleSelectLeft"
                width="auto"
                growing="true"
                growingThreshold="100"
                selectionChange="MC_onTableSelectionChange"
                alternateRowColors="true"
                class="sapUiResponsiveMargin"
                items="{path: 'mainModel>/'}"
            >
                <headerToolbar>
                    <OverflowToolbar>
                        <Title
                            text="Branch Details ({= ${mainModel>/}.length})"
                        />
                        <ToolbarSpacer />
                        <Button
                            text="Add"
                            press="MD_AddButtonPress"
                            type="Accept"
                            id="MC_id_AddCustomer"
                        />
                        <Button
                            text="Edit"
                            press="MD_UpdateTableRow"
                            type="Ghost"
                            id="MC_id_EditCustomer"
                        />
                        <Button
                            text="Delete"
                            press="MD_DeleteRow"
                            type="Reject"
                            id="MC_id_DeleteCustomer"
                        />
                        <Button
                            press="MD_onDownload"
                            type="Transparent"
                            text="Download"
                        />
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column demandPopin="true">
                        <Text text="Branch Code" />
                    </Column>
                    <Column demandPopin="true">
                        <Text text="Branch Name" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Address" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Pincode" />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text text="Contact Number" />
                    </Column>
                    <Column>
                        <Text text="Country"/>
                    </Column>
                    <Column>
                        <Text text="State" />
                    </Column>
                    <Column>
                        <Text text="City" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{mainModel>BranchID}" />
                            <Text text="{mainModel>Name}" />
                            <Text text="{mainModel>Address}" />
                            <Text text="{mainModel>Pincode}" />
                            <Text text="{mainModel>STD} {mainModel>Contact}"/> 
                            <Text text="{mainModel>Country}"/>
                            <Text text="{mainModel>State}" />
                            <Text text="{mainModel>City}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
