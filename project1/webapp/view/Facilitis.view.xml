<mvc:View
    controllerName="sap.ui.com.project1.controller.Facilitis"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:m="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0"
>
    <Page  showHeader="true" >
       <customHeader>
        <Bar>
            <contentLeft>
                <Button icon="sap-icon://nav-back" press=".onNavBack" />
                <Title text="Shah Hostel" class="customPageTitle"/>
            </contentLeft>
              <contentRight>
                <Button icon="sap-icon://log" press=".onHome" />
            </contentRight>
        </Bar>
    </customHeader>
        <content>
            <fb:FilterBar
                id="PO_id_FilterbarEmployee"
                persistencyKey="myPersKey"
                useToolbar="false"
                clear="PO_onPressClear"
                showClearOnFB="true"
                search="HM_onSearch"
                filterChange="IA_.onFilterChange"
                afterVariantLoad="IA_.onAfterVariantLoad"
                showFilterConfiguration="false"
                filterContainerWidth="auto"
				
            >
                <fb:filterGroupItems>
                    <fb:FilterGroupItem
                        name="Bed Type"
                        label="Bed Type"
                        groupName="Group"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <ComboBox
                                id="PO_id_CustomerName"
                                items="{HostelModel>/}"
                                showClearIcon="true"
                            >
                                <core:Item
                                    key="{HostelModel>CustomerName}"
                                    text="{HostelModel>CustomerName}"
                                />
                            </ComboBox>
                        </fb:control>
                    </fb:FilterGroupItem>
                </fb:filterGroupItems>

                <fb:filterGroupItems>
                    <fb:FilterGroupItem
                        name="Branch Code"
                        label="Branch Code"
                        groupName="Group"
                        visibleInFilterBar="true"	
                    >
                        <fb:control>
                            <ComboBox
                                id="PO_id_CompanyName"
                                items="{HostelModel>/}"
                                showClearIcon="true"
                            >
                                <core:ListItem
                                    key="{HostelModel>RoomNumber}"
                                    text="{HostelModel>RoomNumber}"
                                />
                            </ComboBox>
                        </fb:control>
                    </fb:FilterGroupItem>
                </fb:filterGroupItems>

             
            </fb:FilterBar>
            <Table
                id="id_facilityTable"
                sticky="ColumnHeaders,HeaderToolbar"
                mode="SingleSelectLeft"
                width="auto"
                class="sapUiResponsiveMargin"
                items="{path: 'Facilities>/'}"
            >
                <headerToolbar>
                    <OverflowToolbar>
                        <Title
                            text="Booking List ({=${HostelModel>/}.length})"
                        />
                        <ToolbarSpacer />
                         <Button
                            text="Add Facilties"
                            press="FD_RoomDetails"
                            type="Accept"
                        />
                          <Button
                            text="Edit"
                            press="HM_EditDetails"
                            type="Transparent"
                        />
                         <Button
                            text="Delete"
                            press="HM_DeleteDetails"
                            type="Reject"
                        />
                     
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                
					
                    <Column demandPopin="true">
                        <Text
                            text="Branch Code"
                        />
                    </Column>
                      <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text
                            text="Facility Name"
                        />
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text
                            text="Type"
                        />
                    </Column>
                      <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                    >
                        <Text
                            text="Price"
                        />
                    </Column>
                
                </columns>
                <items>
                    <ColumnListItem
                    >
                        <cells>
							<Text text="{Facilities>BranchCode}" />
							
                            <Text text="{Facilities>FacilityName}" />
                        
                            <Text text="{Facilities>Type}" />
                            <Text text="{Facilities>Price}" />

                         <Button
                            text="View"
                            press="HM_viewroom"
                            type="Transparent"
                        />
                         
                        

                            
                           
                           
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    
    </Page>
</mvc:View>
