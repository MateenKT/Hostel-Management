<mvc:View
    controllerName="sap.ui.com.project1.controller.MaintainData"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Page id="page">
        <customHeader>
			<Bar>
				<contentLeft>
					<Button icon="sap-icon://nav-back" press=".onNavBack" />
					<Title text="Shah Hostel" class="customPageTitle"/>
				</contentLeft>
				<contentRight>
					<Button icon="sap-icon://log" press=".onHome" />
				</contentRight>
			</Bar>
		</customHeader>
        <SplitContainer
            id="SplitContDemo"
            initialDetail="detail"
            initialMaster="master"
        >
            <detailPages>
                <Page
                    id="detail"
                    title="Table Details ({= ${dataModel>/}.length })"
                    backgroundDesign="Solid"
                    showNavButton="{= !${device>/system/desktop} }"
                    navButtonPress=".onPressDetailBack"
                >
                    <headerContent>
                        <ToolbarSpacer />
                        <Button
                            text="Add"
                            press="MD_onAddButtonPress"
                        />
                        <Button
                            text="Edit"
                            press="MD_onEditButtonPress"
                        />
                        <Button
                            text="Delete"
                            press="MD_onDeleteButtonPress"
                        />
                        <Button
                            text="Download"
                            press="MD_onDownloadButtonPress"
                        />
                    </headerContent>
                    <ScrollContainer
                        id="scrollContainer"
                        horizontal="true"
                        vertical="true"
                        width="100%"
                        height="100%"
                    >
                    <VBox width="100%" height="100%" id="detailContainer" />
                     </ScrollContainer>
                </Page>
            </detailPages>
            <masterPages>
                <Page title="Table Names">
                    
                        <List
                            items="{ path: 'EntityModel>/'}"
                            itemPress=".onEntitySelect"
                            mode="SingleSelectMaster"
                        >
                            <StandardListItem
                                title="{EntityModel>DisplayName}"
                                description="{ProductId}"
                                icon="{ProductPicUrl}"
                                iconDensityAware="false"
                                iconInset="false"
                                type="Active"
                            />
                        </List>
                </Page>
            </masterPages>
        </SplitContainer>
    </Page>
</mvc:View>