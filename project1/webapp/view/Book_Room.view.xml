<mvc:View
    controllerName="sap.ui.com.project1.controller.Book_Room"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>

    <Page
        showHeader="false"
        class="sapUiResponsivePadding--footer sapUiResponsivePadding--floatingFooter"
        enableScrolling="false"
    >
     <headerContent>
	     <core:Fragment fragmentName="sap.ui.com.project1.fragment.Header" type="XML"/>
		</headerContent>
       <content>
         <core:Fragment
            fragmentName="sap.ui.com.project1.fragment.Header"
            type="XML"
        />
            <ScrollContainer
                width="100%"
                height="100%"
                vertical="true"
                horizontal="false"
            >
                <VBox class="sapUiSmallMargin">
                    <Title
                        text="Hostel Boking"
                        class="boldBlackText"
                    />

                    <!-- Booking Status and Price -->
                    <HBox class="sapUiSmallMarginTop">
                        <VBox>
                            <Text
                                text="Room Price"
                                class="sapUiSmallMarginBottom"
                            />
                            <Text
                                text="{HostelModel>/FinalPrice} {HostelModel>/Currency}"
                                class="largeTextBold"
                            />
                        </VBox>
                        <VBox class="sapUiMediumMarginBegin">
                            <Text
                                text="Bed Type"
                                class="sapUiSmallMarginBottom"
                            />
                            <Text
                                text="{=${HostelModel>/BedType} + ' - '  + ${HostelModel>/ACType}}"
                                class="sapUiTinyMarginEnd largeTextBold"
                            />
                        </VBox> 
                    </HBox>
                </VBox>
                <!-- Wizard -->
                <Wizard
                    class="sapUiResponsivePadding--header sapUiResponsivePadding--content"
                    showNextButton="false"
                    navigationChange="handleNavigationChange"
                    renderMode="Page"
                    id="TC_id_wizard"
                    finishButtonText="Step 4"
                >
                    <!-- Step 1: General Information -->
                    <WizardStep
                        id="TC_id_stepGeneralInfo"
                        title="Booking Information"
                        validated="true"
                        class="customPanelHeader"
                    >
                        <core:Fragment
                            fragmentName="sap.ui.com.project1.fragment.GeneralInfo"
                            type="XML"
                        />
                    </WizardStep>
                    <!-- Step 2: Service Selection -->
                    <WizardStep
        id="idStepPersonal1"
        title="Personal  Information"
        validated="true"
        
    >

        <ScrollContainer width="100%" height="100%" vertical="true">
      
            <VBox id="idPersonalContainer1" class="sapUiSmallMargin" width="100%"/>
        </ScrollContainer>
    </WizardStep>

                    <!-- Step 3: Work Scope -->
                    <WizardStep
                        id="id_Summary"
                        title="Summary"
                    >
                     <mvc:XMLView
                            id="TC_id_childView"
                            viewName="sap.ui.com.project1.view.Book_RoomSummary"
                        />
                       
                    </WizardStep>

                </Wizard>
            </ScrollContainer>
        </content>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    text="proceed to pay"
                    visible="{OBTNModel>/Submit}"
                    type="Emphasized"
                    press="onOpenProceedtoPay"
                />
                <Button
                    text="Cancel"
                    visible="{OBTNModel>/Cancel}"
                    type="Transparent"
                    press="onCancelPress"
                />
                <Button
                    text="Previous"
                    visible="{OBTNModel>/PERVIOUSVIS}"
                    press="onDialogBackButton"
                />
                <Button
                id="IdNextBtn"
                    text="Next"
                    type="Emphasized"
                    enabled="{OBTNModel>/Next}"
                    visible="{OBTNModel>/NXTVis}"
                    press="onDialogNextButton"
                />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
