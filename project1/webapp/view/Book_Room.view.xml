<mvc:View
    controllerName="sap.ui.com.project1.controller.Book_Room"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0"
>
    <Page showHeader="true" title="Book Room">
        <content>
            <Wizard
                id="idHostelWizard"
                complete=".onWizardComplete"
                class="sapUiSizeCompact"
            >
                <!-- ðŸ  Step 1: Room Details -->
                <WizardStep
                    id="idStepRoom"
                    title="Room Details"
                    validated="false"
                >
                    <f:SimpleForm
                        editable="true"
                        layout="ColumnLayout"
                        labelSpanXL="3"
                        labelSpanL="3"
                        labelSpanM="4"
                        labelSpanS="12"
                        columnsXL="2"
                        columnsL="2"
                        columnsM="1"
                        width="100%"
                    >
                        <f:content>
                            <Label text="Desired Room Type" required="true" />
                            <Input id="idRoomType" value="{HostelModel>/RoomType}" editable="false" width="100%" />

                            <Label text="Price" required="true" />
                            <Input id="idPrice1" value="{HostelModel>/Price}" editable="false" width="100%" />

                            <Label text="Payment Method" required="true" />
                            <ComboBox
                                id="idPaymentMethod"
                                placeholder="Select Payment Method"
                                selectedKey="{HostelModel>/PaymentType}"
                                width="100%"
                            >
                                <core:ListItem key="Yearly" text="Yearly" />
                                <core:ListItem key="Monthly" text="Monthly" />
                                <core:ListItem key="Daily" text="Daily" />
                            </ComboBox>

                            <Label text="No of Persons" required="true" />
                            <ComboBox
                                id="id_Noofperson"
                                placeholder="Select Person"
                                selectedKey="{HostelModel>/Person}"
                                selectionChange=".onNoOfPersonSelect"
                                width="100%"
                            >
                                <core:ListItem key="1" text="1" />
                                <core:ListItem key="2" text="2" />
                            </ComboBox>

                            <Label text="Start Date" required="true" />
                            <DatePicker
                                id="idStartDate"
                                value="{HostelModel>/StartDate}"
                                valueFormat="dd/MM/yyyy"
                                displayFormat="dd/MM/yyyy"
                                change=".onDateChange"
                                width="100%"
                            />

                            <Label text="End Date" required="true" />
                            <DatePicker
                                id="idEndDate"
                                value="{HostelModel>/EndDate}"
                                valueFormat="dd/MM/yyyy"
                                displayFormat="dd/MM/yyyy"
                                change=".onDateChange"
                                width="100%"
                            />
                        </f:content>
                    </f:SimpleForm>
                </WizardStep>

                <!-- ðŸ‘¤ Step 2: Personal Information -->
                <WizardStep
                    id="idStepPersonal"
                    title="Personal Information"
                    validated="false"
                >
                    <VBox
                        id="idPersonalContainer"
                        class="sapUiSmallMargin"
                        width="100%"
                    />
                </WizardStep>
            </Wizard>
        </content>

        <!-- ðŸ”˜ Footer with Navigation Buttons -->
        <footer>
            <Toolbar>
                <ToolbarSpacer />

                <Button
                    id="idWizardBackBtn"
                    text="Previous"
                    type="Transparent"
                    press=".onWizardBack"
                    enabled="false"
                />

                <Button
                    id="idWizardNextBtn"
                    text="Next"
                    type="Emphasized"
                    press=".onWizardNext"
                />

                <Button
                    id="idWizardSubmitBtn"
                    text="Submit"
                    visible="false"
                    type="Accept"
                    press=".onSaveDialog"
                />

                <Button
                    text="Cancel"
                    type="Reject"
                    press=".onCancelDialog"
                />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
